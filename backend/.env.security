# Security Configuration Template
# Copy to .env and update with your values

# Django Security
DJANGO_SECRET_KEY=your-very-secure-secret-key-here-change-this
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-change-this-to-something-secure
JWT_EXPIRATION_HOURS=6

# CSRF Configuration
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting
RATE_LIMIT_ENABLE=True
RATE_LIMIT_PER_MINUTE=60

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-2

# Database Cache (for rate limiting)
CACHE_BACKEND=django.core.cache.backends.locmem.LocMemCache